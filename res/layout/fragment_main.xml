<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<include layout="@layout/template_title_bar"/>
	<include layout="@layout/header_fragment_main"/>
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#9AA4Ac">
	    <LinearLayout
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dimen_4_dip"
			android:orientation="vertical">
	        <View 
	            android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_225_dip"
				android:layout_marginLeft="@dimen/dimen_5_dip"
				android:layout_marginRight="@dimen/dimen_5_dip"
				android:id="@+id/head"
				android:background="@drawable/recommend_background_white"/>"
	        <TextView 
	            android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_27_dip"
				android:layout_marginLeft="@dimen/dimen_5_dip"
				android:layout_marginRight="@dimen/dimen_5_dip"
				android:gravity="center"
				android:text="立即抢购"
				android:textSize="@dimen/dimen_9_dip"
         		android:textColor="@color/white"
         		android:includeFontPadding="false"
				android:id="@+id/tail"
				android:background="@drawable/recommend_background_blue"/>
	    </LinearLayout>
	    <TextView 
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dimen_11_dip"
				android:layout_centerHorizontal="true"
				android:text="奥山金融1号"
				android:textSize="@dimen/dimen_9_dip"
         		android:textColor="#333333"
         		android:includeFontPadding="false"
				android:id="@+id/tender_title"/>
	    <FrameLayout 
	        android:layout_width="@dimen/dimen_163_dip"
			android:layout_height="@dimen/dimen_163_dip"
			android:layout_marginTop="@dimen/dimen_7_dip"
			android:layout_centerHorizontal="true"
			android:layout_below="@id/tender_title">
	        <com.example.money.widget.DashBoard
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				app:progress="240"
				app:ringColor="#000000"
				app:remainderColor="#000000"
				app:ringWidth="@dimen/dimen_2_dip"/>
		    <com.example.money.widget.DashBoard
				android:layout_width="@dimen/dimen_149_dip"
				android:layout_height="@dimen/dimen_149_dip"
				app:progress="180"
				app:ringColor="@color/main_blue"
				app:remainderColor="@color/gray_bg"
				app:ringWidth="@dimen/dimen_4_dip"
				android:id="@+id/progress"
				android:layout_gravity="center"/>
	    </FrameLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/dimen_163_dip"
	        android:layout_marginLeft="@dimen/dimen_20_dip"
	        android:layout_marginRight="@dimen/dimen_20_dip"
	        android:orientation="horizontal"
	        android:layout_below="@id/tender_title"
	        android:id="@+id/msg_layout">
	        <LinearLayout
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:gravity="center">
	            <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="3个月"
	                android:textSize="@dimen/dimen_7_dip"
	         		android:textColor="#555555"
	         		android:includeFontPadding="false"/>
	            <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="投资期限"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#9AA4Ac"
	         		android:includeFontPadding="false"/>
	        </LinearLayout>
	        <LinearLayout
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:gravity="center">
	            <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="1000.00"
	                android:textSize="@dimen/dimen_7_dip"
	         		android:textColor="#555555"
	         		android:includeFontPadding="false"/>
	            <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="起投金额"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#9AA4Ac"
	         		android:includeFontPadding="false"/>
	        </LinearLayout>
	        <LinearLayout
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical"
				android:gravity="center">
	            <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="200,000.00"
	                android:textSize="@dimen/dimen_7_dip"
	         		android:textColor="#555555"
	         		android:includeFontPadding="false"/>
	            <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="可投金额"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#9AA4Ac"
	         		android:includeFontPadding="false"/>
	        </LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dimen_14_dip"
			android:orientation="horizontal"
			android:layout_centerHorizontal="true"
			android:gravity="center"
			android:layout_below="@id/msg_layout">
	        <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="距离购买结束"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#9AA4Ac"
	         		android:includeFontPadding="false"/>
	        <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="00"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#2EA2F9"
	         		android:includeFontPadding="false"/>
	        <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="天"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#9AA4Ac"
	         		android:includeFontPadding="false"/>
	        <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="11"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#2EA2F9"
	         		android:includeFontPadding="false"/>
	        <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="时"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#9AA4Ac"
	         		android:includeFontPadding="false"/>
	        <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="26"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#2EA2F9"
	         		android:includeFontPadding="false"/>
	        <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="分"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#9AA4Ac"
	         		android:includeFontPadding="false"/>
	        <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="18"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#2EA2F9"
	         		android:includeFontPadding="false"/>
	        <TextView
	                android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="秒"
	                android:textSize="@dimen/dimen_6_dip"
	         		android:textColor="#9AA4Ac"
	         		android:includeFontPadding="false"/>
	    </LinearLayout>
	</RelativeLayout>
</LinearLayout>
